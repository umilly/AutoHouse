        <Button Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" Click="AddParamsClick">Добавить парметр</Button>
        <Button Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="0" Click="ClearFilter">Сбросить фильтр</Button>
    </Grid>
</vmBase:CustomViewBase>
